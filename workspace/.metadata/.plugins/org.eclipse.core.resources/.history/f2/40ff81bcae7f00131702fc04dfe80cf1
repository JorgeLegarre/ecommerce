package se.legarre.ecommerce.model;

public final class ProductIdQuantityModel
{
	private final String cod;
	private final int value;

	public ProductIdQuantityModel(String cod, int value)
	{
		this.cod = cod;
		this.value = value;
	}

	public ProductIdQuantityModel(ProductIdQuantityModel other)
	{
		this.cod = other.cod;
		this.value = other.value;
	}

	public String getCod()
	{
		return cod;
	}

	public int getValue()
	{
		return value;
	}

	@Override
	public boolean equals(Object obj)
	{
		if (this == obj) return true;
		if (obj instanceof ProductIdQuantityModel)
		{
			ProductIdQuantityModel other = (ProductIdQuantityModel) obj;
			return this.cod.equals(other.cod);
		}
		return false;
	}

	@Override
	public int hashCode()
	{
		return 41 * this.cod.hashCode();
	}

	@Override
	public String toString()
	{
		return String.format("Cod: %s, Value: %s", cod, value);
	}
}
