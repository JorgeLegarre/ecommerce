package se.legarre.ecommerce.model;

public final class CategoryModel
{
	public static final String DEFAULT_ID = "";
	
	private String id;
	private String desc;
	private String rootCategory;

	public CategoryModel(String id, String desc)
	{
		this.id = id;
		this.desc = desc;
	}
	
	public CategoryModel(String id, String desc, String rootCategory)
	{
		this(id, desc);
		this.rootCategory = rootCategory;
	}

	public String getId()
	{
		return id;
	}

	public String getDesc()
	{
		return desc;
	}

	public String getRootCategory()
	{
		return rootCategory;
	}

}
